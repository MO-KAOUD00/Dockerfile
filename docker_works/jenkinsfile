 pipeline {
     agent any
     parameters{
        string(name: 'VERSION' , defaultValue: '' , description: 'showing the version')
     }
     stages {

         stage('build') {

             steps {
                 script {
                     echo "building application"
                     echo "Version = ${params.VERSION}"
                 }
             }
         }

         stage('test') {
             steps {
                 script {
                     echo "testing application"
                 }
             }
         }
         stage('deploy') {
             steps {
                 script {
                     echo "Deploying application"
                 }
             }
         }
     }
 }
