 pipeline {
     agent any
     parameters{
        string(name: 'VERSION' , defaultValue: '1.0.0' , description: '')
     }
     stages {

         stage('build') {

             steps {
                 script {
                     echo "building application"
                 }
             }
         }

         stage('test') {
             steps {
                 script {
                     echo "testing application"
                 }
             }
         }
         stage('deploy') {
             steps {
                 script {
                     echo "Deploying application"
                 }
             }
         }
     }
 }
